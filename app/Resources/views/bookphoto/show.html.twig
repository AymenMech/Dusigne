{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bookphoto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bookPhoto.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ bookPhoto.url }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ bookPhoto.image }}</td>
            </tr>
            <tr>
                <th>Updateat</th>
                <td>{% if bookPhoto.updateAt %}{{ bookPhoto.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if bookPhoto.enabled %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('test_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('test_edit', { 'id': bookPhoto.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
